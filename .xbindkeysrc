# Increase volume
"pamixer --unmute; pamixer --increase 5"
    XF86AudioRaiseVolume

# Decrease volume
"pamixer --decrease 5"
    XF86AudioLowerVolume

# Toggle volume
"pamixer --toggle-mute"
    m:0x10 + c:121
    XF86AudioMute

# Toggle Microphone mute
"pamixer --source 1 --toggle-mute"
    XF86AudioMicMute

# Increase brightness
"brightness up"
    m:0x10 + c:233
    Mod2 + XF86MonBrightNessUp

# Decrease brightness
"brightness down"
    m:0x10 + c:232
    Mod2 + XF86MonBrightNessDown

# Takes screenshot
"scrot '%d-%m-%Y_%H:%M:%S.png' -e 'mv $f ~/screenshots/'"
    m:0x10 + c:107
    Mod2 + Print
