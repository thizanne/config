# Increase volume
"amixer set Master playback 1dB+"
    m:0x0 + c:123
    Mod2 + XF86AudioRaiseVolume

# Decrease volume
"amixer set Master playback 1dB-"
    m:0x0 + c:122
    Mod2 + XF86AudioLowerVolume

# Toggle volume
"amixer set Master playback toggle"
    m:0x10 + c:121
    Mod2 + XF86AudioMute

# Increase brightness
"brightness up"
    m:0x10 + c:233
    Mod2 + XF86MonBrightNessUp

# Decrease brightness
"brightness down"
    m:0x10 + c:232
    Mod2 + XF86MonBrightNessDown


# Takes screenshot
"scrot '%d-%m-%Y_%H:%M:%S.png' -e 'mv $f ~/screenshots/'"
    m:0x10 + c:107
    Mod2 + Print
