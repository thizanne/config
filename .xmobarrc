           , Run StdinReader
           , Run BatteryP ["BAT0"]
                 [ "--template", "<leftipat>"
                 , "--Low", "30" -- units: %
                 , "--low", "#dc322f"
                 , "--" -- battery specific options
                 -- discharging
                 , "--off-icon-pattern", "<fc=#b58900><fn=3> ðŸ”‹ </fn><left>% (<timeleft>) </fc>"
                 -- charging
                 , "--on-icon-pattern", "<fc=#859900><fn=1> âš¡ </fn><left>% (<timeleft>) </fc>"
                 -- charged
                 , "--idle-icon-pattern", "<fc=#859900><fn=1> âš¡ </fn></fc>"
                 ] 30
           ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%StdinReader%                        <fc=#93a1a1><fn=1>â™«</fn> %mpd% </fc> }{  %battery%       <fc=#93a1a1>%date%</fc>   "
