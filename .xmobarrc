Config {
       -- fallback to DejaVu for greek chars
       font = "xft:inconsolata-15:antialias=true,xft:DejaVu Sans-13"
       -- additional fonts when explicitely needed
       -- fallback doesn't work for battery icons (displays a â–¯)
       , additionalFonts =
       [ "xft:DejaVu Sans-13"
       , "xft:Noto Sans CJK SC:size=10:antialias=true"
       , "xft:Symbola:size=13"
       ]
       , bgColor = "#002b36"
       , fgColor = "#657b83"
       , position = Top
       , lowerOnStart = True
       , commands =
           [ Run Date "%a %d %b - %k:%M" "date" 600
           , Run Com "ict.py" ["status", "--color", "xmobar"] "ict" 1
           , Run StdinReader
           ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%StdinReader% }{ %ict%   <fc=#93a1a1>%date%</fc>   "
       }
