Config {
       -- fallback to DejaVu for greek chars
       font = "xft:Inconsolata-27"
       -- additional fonts when explicitely needed
       -- fallback doesn't work for battery icons (displays a â–¯)
       , additionalFonts =
       [ "xft:DejaVu Sans-13"
       , "xft:Noto Sans CJK SC:size=10:antialias=true"
       , "xft:Symbola:size=13"
       ]
       , bgColor = "#002b36"
       , fgColor = "#657b83"
       , position = Static { xpos = 0, ypos = 0, width = 3840, height = 40 }
       , lowerOnStart = True
       , commands =
           [ Run Com "mpd_status.py" [] "mpd" 10
           , Run Date "%a %d %b - %k:%M" "date" 600
